/* Private variables ---------------------------------------------------------*/
I2C_HandleTypeDef hi2c1;

SPI_HandleTypeDef hspi1;

TIM_HandleTypeDef htim2;

/* USER CODE BEGIN PV */
uint8_t status;
uint8_t str[16];
uint8_t sNum[5];
// Định nghĩa số lượng thẻ được phép
#define NUM_ALLOWED_CARDS 20

// Danh sách các UID hợp lệ (Master Database)
const uint8_t Allowed_UIDs[NUM_ALLOWED_CARDS][5] = {
    {44, 245, 250, 3, 32},   // Thẻ 1
    {227, 26, 186, 27, 88},   // Thẻ 2
    {52,208,134,90,56},
	{52,86,74,90,114}
};

char *msg1 = "Reading from CARD\r\n";
char *msg2 = "Reading from TAG\r\n";
/* USER CODE END PV */

